@font-face
  font-family 'Raleway'
  font-style normal
  font-weight 200
  src local('Raleway ExtraLight'), local('Raleway-ExtraLight'), url(../fonts/railway.woff) format('woff')

*
  margin 0
  padding 0

*, *:before, *:after
  -webkit-box-sizing border-box
  box-sizing border-box

body
  position fixed
  width 100%
  height 100%
  font-family 'Raleway', sans-serif;
  font-weight 200
  font-size 18px
  overflow-x hidden
  color #262626
  padding 1px 0 1px 0
  text-align center

button, input[type='submit'], input[type='file']
  background #efefef
  border none
  padding 10px
  box-shadow 0 0 1px #555
  margin 10px

hr
  width 80%
  margin-left 10%
  background #555
  border-top 1px solid #cdcdcd

.spacer-25
  height 25px

.trans
  -webkit-transition: all 0.4s ease;
  -moz-transition: all 0.4s ease;
  -o-transition: all 0.4s ease;
  transition: all 0.4s ease;  
.hidden
  display none


.background
  z-index -1
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-size cover
  background-attachment fixed
  background-position center top  


.clock
  margin 10%
  color #fff
  font-size 20vw
  text-shadow 0 0 1px #555


.footer
  position absolute
  bottom 0
  width 100%
  .button-settings
    display inline-block
    float right
    width 30px
    height 30px
    opacity .5
    &:hover
      opacity 1


.opaque-box
  position fixed
  top 25%
  width 80%
  min-height 50%
  margin-left 10%
  background rgba(250, 250, 250, .9)
  padding 25px
  box-shadow 0 0 3px #555
  .close
    position absolute
    top 0
    right 0
    width 30px
    height 30px
    background rgba(250, 250, 250, 1)
    font-size 25px
    &:before
      content: "X"


.box
  width 50%
  display inline-block

.settings
  @extend .opaque-box


@media all and (max-width: 1000px)
  .box
    width 100%
    margin-top 25px
    

