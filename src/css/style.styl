@font-face
  font-family 'Raleway'
  font-style normal
  font-weight 200
  src local('Raleway ExtraLight'), local('Raleway-ExtraLight'), url(../fonts/railway.woff) format('woff')

*
  margin 0
  padding 0

*, *:before, *:after
  -webkit-box-sizing border-box
  box-sizing border-box

body
  position fixed
  width 100%
  height 100%
  font-family 'Raleway', sans-serif;
  font-weight 200
  font-size 1em
  overflow-x hidden
  color #262626
  background #cdcdcd url(../images/bg.jpg)
  background-size cover
  background-attachment fixed
  background-position center top
  padding 1px 0 1px 0
  text-align center

.clock
  margin 10%
  color #fff
  font-size 20vw
  text-shadow 0 0 1px #555
